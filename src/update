#!/usr/bin/env ruby

# hookit is installed as a bundled app, so we need bundler to load it for us
$:.unshift  '/opt/gomicro/hookit/vendor/bundle'
require 'bundler/setup'

# load hookit/setup to bootstrap hookit and import the dsl
require 'hookit/setup'

local_pulse_md5 = execute "local pulse md5" do
  command "cat /var/microbox/pulse.md5"
  not_if { ! ::File.exists? "/var/microbox/pulse.md5" }
end

aws_pulse_md5 = execute "aws pulse md5" do
  command "curl \
    -f \
    -k \
    https://s3.amazonaws.com/tools.microbox.cloud/pulse/linux/amd64/pulse.md5 \
      | tee /tmp/pulse.md5"
end

if local_pulse_md5 != aws_pulse_md5
  # Stop pulse
  service 'pulse' do
    action :disable
    not_if { !Dir.exist?('/etc/service/pulse') }
  end

  execute "Download pulse" do
    command "curl \
      -f \
      -k \
      -o /usr/local/bin/pulse \
      https://s3.amazonaws.com/tools.microbox.cloud/pulse/linux/amd64/pulse"
  end

  execute "Chmod pulse" do
    command "chmod 755 /usr/local/bin/pulse"
  end

  service 'pulse' do
    action :enable
    not_if { !Dir.exist?('/etc/service/pulse') }
  end

  execute "Finalize update" do
    command "mv /tmp/pulse.md5 /var/microbox/pulse.md5"
  end
end

local_hooks_md5 = execute "local hooks md5" do
  command "cat /var/microbox/hooks.md5"
  not_if { ! ::File.exists? "/var/microbox/hooks.md5" }
end

aws_hooks_md5 = execute "aws hooks md5" do
  command "curl \
    -f \
    -k \
    https://s3.amazonaws.com/tools.microbox.cloud/hooks/pulse-stable.md5 \
      | tee /tmp/hooks.md5"
end

if local_hooks_md5 != aws_hooks_md5
  execute "update hooks" do
    command "curl \
      -f \
      -k \
      https://s3.amazonaws.com/tools.microbox.cloud/hooks/pulse-stable.tgz \
        | tar -xz -C /opt/microbox/hooks"
  end

  execute "Finalize update" do
    command "mv /tmp/hooks.md5 /var/microbox/hooks.md5"
  end
end
